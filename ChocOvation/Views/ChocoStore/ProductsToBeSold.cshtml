@model IEnumerable<ChocOvation.Models.Product>

@{
    ViewBag.Title = "ProductsToBeSold";
}

<h2>Available products</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BarCode)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.ChocoCategory.ChocoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerItem)
        </th>   
        @*<th>
            Select
        </th>*@   
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>           
            <td>
                @Html.DisplayFor(modelItem => item.BarCode)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.ChocoCategory.ChocoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerItem)
            </td>            
            <td>            
                @Html.ActionLink("Select", "Sold", new { id = item.ProductID })                
            </td>
        </tr>
    }

</table>


